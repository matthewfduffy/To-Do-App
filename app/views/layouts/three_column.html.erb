    <div class="navbar navbar-default navbar-fixed-top" style="background-color:rgba(204, 186, 255, 0.54)">
          <%= yield :nav_bar%>
      </div>
  </div> -->
  <div class="container" style="background-color: rgb(255, 255, 255)">
        <div class="row">
            <div class="col-md-4">
                <%= yield :left_column %>
            </div>
            <div class="col-md-4">
                <%= yield :middle_column %>
            </div>
            <div class="col-md-4">
                <%= yield :right_column %>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <%= yield :add_task %>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
<%= yield %>

</body>
</html>
